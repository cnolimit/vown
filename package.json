{
  "name": "vown",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "danger": "danger",
    "clean": "./scripts/clean.sh",
    "test": "jest",
    "lint": "eslint ./packages --ext .ts,.tsx",
    "prettier": "prettier --check \"packages/**/*.+(ts|tsx|json|md)\"",
    "format": "yarn prettier --write"
  },
  "license": "MIT",
  "repository": "git@github.com:Veriown/vown.git",
  "author": "Phillip Boateng <cnolimit@gmail.com>",
  "dependencies": {
    "danger": "^9.2.0",
    "jest": "^24.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "prettier": "^1.18.2"
  }
}
